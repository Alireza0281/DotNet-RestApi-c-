@model ApiSample.Models.ViewModel.VoiceViewModel
@{
    ViewBag.Title = "آپلود فایل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--simplesend--------------------------------------------------------------------------------------------------------------------------------->
<div class="row">
    <div class="col-md-12 col-sm-12 top-2">
        <p class="heder" id="simplesend"> آپلود فایل </p>
        <div class="form-horizontal">
            @if (TempData["Massage"] != null)
            {
                <div class="form-group">
                    <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12   padding-right-0 padding-left-0  float-right   ">
                        @Html.Raw(TempData["Massage"])
                    </div>
                </div>
            }

            @using (Html.BeginForm("UploadFile", "Voice", new { area = string.Empty }, FormMethod.Post, htmlAttributes: new { @class = "margin-bottom-0", @id = "", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="control-label col-md-2  col-sm-12 margin-bottom-6 text-right padding-top-5">@Html.DisplayNameFor(model => model.ApiKey)</label>
                    <div class="col-md-5 col-sm-12">
                        @Html.TextAreaFor(model => model.ApiKey, htmlAttributes: new { @class = "form-control ltr", type = "", @id = "", required = "required" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2  col-sm-12 margin-bottom-6 text-right padding-top-5">@Html.DisplayNameFor(model => model.Description)</label>
                    <div class="col-md-5 col-sm-12">
                        @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", type = "", @id = "", rows = "5" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2  col-sm-12 margin-bottom-6 text-right padding-top-5">@Html.DisplayNameFor(model => model.File)</label>
                    <div class="col-md-5 col-sm-12">
                        <input type="file" class="form-control" id="file" name="Upload" />
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-md-8 col-md-offset-2   ">
                        <button id="" href="#" class="btn btn-success" type="submit">
                            <i class="fa fa-send"></i>
                            <span>ارسال اطلاعات</span>
                        </button>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
@section sec_script{

    <script>
        $('input[type=file]').change(function () {
          var x=  this.files[0].mozFullPath;
        });
    </script>
}
