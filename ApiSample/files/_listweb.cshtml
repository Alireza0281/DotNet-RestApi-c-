<script>
    function deleteWebsite(websiteid) {
        $.confirm({
            title: "حذف وب سایت",
            text: "آیا اطمینان به حدف وب سایت انتخاب شده دارید ؟",
            confirm: function (button) {
                $.ajax({

                    url: "@(Url.Action("Delete","Website",routeValues:new { area=String.Empty }))",
                    data: { 'id': websiteid },
                    type: "post",
                    cache: false,
                    success: function (result) {
                        if (result.success == true) {
                            var id = result.id;
                            $("#trWebsite" + id + "").remove();
                        }
                        $.each(result.notyAlert, function (x, y) {
                            generateNotyMessage('' + y.Type + '', '' + y.Message + '', y.AutoClose, y.CloseTime, '' + y.Position + '');
                        });
                        var count = $("#websiteCounter").text();
                        $("#websiteCounter").empty();
                        $("#websiteCounter").append((parseInt(count) - 1));
                        SetWebsiteTableIndex();
                    },
                    error: function (xhr, ajaxOptions, thrownError) {

                    }
                });
            },
            cancel: function (button) {
                return false;
            },
            confirmButton: "بله",
            cancelButton: "خیر",
        });
    };


